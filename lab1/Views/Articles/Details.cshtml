@using System.Security.Claims
@model lab1.Models.Article

@{
    ViewData["Title"] = Model.Title;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<style>
    .reader-container {
        max-width: 800px;
        margin: 0 auto;
        animation: fadeUp 1s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .reading-glass {
        background: rgba(30, 30, 35, 0.4);
        backdrop-filter: blur(50px) saturate(100%);
        -webkit-backdrop-filter: blur(50px) saturate(100%);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 40px;
        padding: 60px 80px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 40px 100px rgba(0, 0, 0, 0.5);
    }

    .article-title {
        font-size: 3.5rem;
        font-weight: 800;
        letter-spacing: -0.03em;
        line-height: 1.1;
        color: #fff;
        margin-bottom: 30px;
        background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.8) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .meta-row {
        display: flex;
        align-items: center;
        gap: 24px;
        padding-bottom: 40px;
        margin-bottom: 40px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .meta-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba(255, 255, 255, 0.3);
        font-weight: 600;
    }

    .meta-value {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
    }

    .rating-badge {
        background: rgba(255, 214, 10, 0.1);
        color: #FFD60A;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .prose-content {
        font-size: 1.25rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.85);
        white-space: pre-wrap;
        font-family: 'Inter', -apple-system, sans-serif;
        margin-bottom: 60px;
    }

    .authors-section {
        margin-top: 60px;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .author-chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.05);
        padding: 8px 16px;
        border-radius: 50px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        transition: all 0.2s;
        border: 1px solid transparent;
    }

        .author-chip:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            border-color: rgba(255, 255, 255, 0.1);
        }

    .author-avatar {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: rgba(255,255,255,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        font-weight: 700;
    }

    /* --- Стилі для блоку рейтингу --- */
    .glass-box {
        background: rgba(10, 15, 30, 0.4);
        backdrop-filter: blur(40px);
        -webkit-backdrop-filter: blur(40px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 24px;
    }

    .deep-input {
        background: rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        color: #fff;
        transition: all 0.3s;
    }

        .deep-input:focus {
            outline: none;
            border-color: #00ffc8;
            background: rgba(10, 25, 60, 0.5);
        }

    .btn-submit {
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background: rgba(0, 255, 200, 0.3) !important;
            color: #fff !important;
            transform: translateY(-2px);
        }
    /* -------------------------------- */

    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 60px;
    }

    .btn-back {
        color: rgba(255, 255, 255, 0.4);
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-back:hover {
            color: #fff;
        }

    .btn-group-actions {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .link-danger {
        color: #ff453a;
        text-decoration: none;
        font-size: 0.95rem;
        opacity: 0.7;
        transition: opacity 0.2s;
    }

        .link-danger:hover {
            opacity: 1;
        }

    .btn-edit-primary {
        background: #fff;
        color: #000;
        text-decoration: none;
        padding: 12px 32px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: transform 0.2s cubic-bezier(0.25, 1, 0.5, 1);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
    }

        .btn-edit-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.25);
            color: #000;
        }

    @@media (max-width: 768px) {
        .reading-glass {
            padding: 40px 24px;
        }

        .article-title {
            font-size: 2.5rem;
        }

        .meta-row {
            flex-wrap: wrap;
            gap: 20px;
        }
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="reader-container py-5">

    @if (TempData["Message"] != null)
    {
        <div style="color: #00ffc8; margin-bottom: 20px; font-weight: 500; background: rgba(0, 255, 200, 0.1); padding: 12px 20px; border-radius: 12px; border: 1px solid rgba(0, 255, 200, 0.2);">
            ✓ @TempData["Message"]
        </div>
    }

    <div class="reading-glass">

        <header>
            <h1 class="article-title">@Model.Title</h1>

            <div class="meta-row">
                <div class="meta-item">
                    <span class="meta-label">Date</span>
                    <span class="meta-value">@Model.PublicationDate.ToString("MMM dd, yyyy")</span>
                </div>

                <div class="meta-item">
                    <span class="meta-label">Category</span>
                    <span class="meta-value">@Model.Category</span>
                </div>

                <div class="meta-item">
                    <span class="meta-label">Rating</span>
                    <span class="rating-badge">
                        ★ @Model.Rating.ToString("0.0")
                    </span>
                </div>
            </div>
        </header>

        <article class="prose-content">
            @Model.Content
        </article>

        @if (Model.ArticleAuthors != null && Model.ArticleAuthors.Any())
        {
            <div class="authors-section">
                <div class="meta-label" style="margin-bottom: 12px;">WRITTEN BY</div>
                @foreach (var link in Model.ArticleAuthors)
                {
                    var initial = link.Author.FullName.Substring(0, 1);
                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@link.AuthorId" class="author-chip">
                        <div class="author-avatar">@initial</div>
                        @link.Author.FullName
                    </a>
                }
            </div>
        }

        @if (Model.UserId != currentUserId)
        {
            <div class="glass-box" style="margin-top: 40px; padding: 30px; border-color: rgba(0, 255, 200, 0.3);">
                <h4 style="color: #fff; margin-bottom: 15px; font-size: 1.2rem;">Rate this article</h4>

                <form asp-action="RateArticle" method="post" style="display: flex; gap: 15px; align-items: center; flex-wrap: wrap;">
                    <input type="hidden" name="articleId" value="@Model.Id" />

                    <input type="number" name="score" min="1" max="10" required
                           class="deep-input" style="width: 100px; padding: 12px;" placeholder="1 - 10" />

                    <button type="submit" class="btn-submit" style="margin-top: 0; min-width: 120px; padding: 12px 24px; background: rgba(0, 255, 200, 0.15); border-color: rgba(0, 255, 200, 0.4); color: #00ffc8; border-width: 1px; border-style: solid;">
                        Submit Rating
                    </button>
                </form>
            </div>
        }

        <div class="action-bar">
            <a asp-action="Index" class="btn-back">
                <span>&larr;</span> Library
            </a>

            @if (Model.UserId == currentUserId || User.IsInRole("Admin"))
            {
                <div class="btn-group-actions">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="link-danger">Delete</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit-primary">Edit Article</a>
                </div>
            }
        </div>

    </div>
</div>