<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Journal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --glass-surface: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.08);
            --glass-highlight: rgba(255, 255, 255, 0.15);
            --text-primary: #ffffff;
            --text-secondary: rgba(255, 255, 255, 0.55);
            --accent-glow: rgba(255, 255, 255, 0.1);
        }

        body {
            background-color: #000000;
            color: var(--text-primary);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            overflow-x: hidden;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
            background: radial-gradient(circle at 50% 0%, #1a1a2e 0%, #000000 60%);
        }

        /* Ambient Light (Фонове світло) */
        .ambient-light {
            position: fixed;
            top: -20%;
            left: 50%;
            transform: translateX(-50%);
            width: 80vw;
            height: 60vh;
            background: radial-gradient(ellipse at center, rgba(60, 100, 255, 0.08), transparent 70%);
            z-index: -1;
            pointer-events: none;
            animation: breathe 10s ease-in-out infinite alternate;
        }

        @@keyframes breathe {
            0% {
                opacity: 0.5;
                transform: translateX(-50%) scale(1);
            }

            100% {
                opacity: 0.8;
                transform: translateX(-50%) scale(1.1);
            }
        }

        /* NAVIGATION - Floating Capsule */
        .nav-container {
            position: fixed;
            top: 24px;
            left: 0;
            right: 0;
            display: flex;
            justify-content: center;
            z-index: 1000;
        }

        .glass-nav {
            background: rgba(20, 20, 20, 0.6);
            backdrop-filter: blur(25px) saturate(180%);
            -webkit-backdrop-filter: blur(25px) saturate(180%);
            border: 1px solid var(--glass-border);
            padding: 12px 30px;
            border-radius: 100px; /* Капсула */
            display: flex;
            align-items: center;
            gap: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

            .glass-nav:hover {
                background: rgba(30, 30, 30, 0.7);
                transform: translateY(2px);
                border-color: var(--glass-highlight);
            }

        .nav-brand {
            font-weight: 700;
            font-size: 1rem;
            letter-spacing: -0.02em;
            color: #fff;
            text-decoration: none;
            opacity: 0.9;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .nav-item-link {
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .nav-item-link:hover {
                color: #fff;
            }

        /* MAIN CONTENT */
        .content-wrapper {
            margin-top: 120px;
            flex: 1 0 auto;
            position: relative;
            z-index: 1;
            width: 100%;
        }

        /* FOOTER */
        .minimal-footer {
            flex-shrink: 0;
            text-align: center;
            padding: 40px 0;
            color: var(--text-secondary);
            font-size: 0.8rem;
            opacity: 0.5;
        }

            .minimal-footer a {
                color: inherit;
                text-decoration: none;
            }

                .minimal-footer a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>

    <div class="ambient-light"></div>

    <div class="nav-container">
        <nav class="glass-nav">
            <a class="nav-brand" asp-controller="Home" asp-action="Index">IJournal</a>
            <div style="width: 1px; height: 16px; background: rgba(255,255,255,0.1);"></div>
            <ul class="nav-links">
                <li><a class="nav-item-link" asp-controller="Articles" asp-action="Index">Статті</a></li>
                <li><a class="nav-item-link" asp-controller="Authors" asp-action="Index">Автори</a></li>
                <li><a class="nav-item-link" asp-controller="Articles" asp-action="Create">Новий допис</a></li>
            </ul>
        </nav>
    </div>

    <div class="container content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="minimal-footer">
        <p>
            &copy; 2026 Designed in Lviv.
            <a href="https://github.com/Karoshi-man/server-web" target="_blank" style="margin-left: 10px; border-bottom: 1px solid rgba(255,255,255,0.1); transition: all 0.3s ease;">
                GitHub
            </a>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>