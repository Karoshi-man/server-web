@model IEnumerable<lab1.Models.Author>

@{
    ViewData["Title"] = "Автори";
}

<style>
    /* AUTHORS HEADER */
    .authors-header {
        text-align: center;
        margin-bottom: 60px;
        padding-top: 40px;
    }

    .authors-title {
        font-size: 3rem;
        font-weight: 700;
        letter-spacing: -0.02em;
        background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.7) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 16px;
    }

    .authors-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.4);
        max-width: 500px;
        margin: 0 auto 40px auto;
    }

    /* NEW AUTHOR BUTTON */
    .btn-add-author {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        padding: 12px 32px;
        border-radius: 100px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-add-author:hover {
            background: #fff;
            color: #000;
            border-color: #fff;
        }

    /* GRID LAYOUT */
    .authors-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
    }

    /* PROFILE CARD */
    .profile-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        padding: 40px 24px;
        text-align: center;
        transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .profile-card:hover {
            transform: translateY(-8px);
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(255, 255, 255, 0.15);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

    /* AVATAR */
    .avatar-wrapper {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
        margin: 0 auto 20px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
        position: relative;
    }

    .profile-card:hover .avatar-wrapper {
        color: #fff;
        box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.2), 0 0 30px rgba(255, 255, 255, 0.1);
    }

    /* TEXT INFO */
    .profile-name {
        font-size: 1.25rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 4px;
        display: block;
        text-decoration: none;
    }

    .profile-handle {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.4);
        margin-bottom: 20px;
        font-family: 'Courier New', monospace;
    }

    .profile-bio {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.5;
        margin-bottom: 30px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 2.7em;
    }

    /* ACTIONS OVERLAY (Visible on Hover) */
    .actions-bar {
        display: flex;
        justify-content: center;
        gap: 16px;
        opacity: 0.4;
        transition: opacity 0.2s;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding-top: 20px;
    }

    .profile-card:hover .actions-bar {
        opacity: 1;
    }

    .action-link {
        color: rgba(255, 255, 255, 0.5);
        text-decoration: none;
        font-size: 1.2rem;
        transition: transform 0.2s, color 0.2s;
    }

        .action-link:hover {
            color: #fff;
            transform: scale(1.1);
        }

    .delete-link:hover {
        color: #ff453a;
    }

</style>

<div class="container pb-5">

    <div class="authors-header">
        <h1 class="authors-title">Authors</h1>
        <p class="authors-subtitle">Voices that shape our journal.</p>

        <a asp-action="Create" class="btn-add-author">
            Add New Profile
        </a>
    </div>

    <div class="authors-grid">
        @foreach (var item in Model)
        {
            <div class="profile-card">

                <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                    @{
                        var initial = !string.IsNullOrEmpty(item.FullName) ? item.FullName.Substring(0, 1).ToUpper() : "?";
                    }
                    <div class="avatar-wrapper">
                        @initial
                    </div>

                    <span class="profile-name">@item.FullName</span>

                    @if (!string.IsNullOrEmpty(item.Nickname))
                    {
                        <div class="profile-handle">@@@item.Nickname</div>
                    }
                    else
                    {
                        <div class="profile-handle" style="opacity: 0;">-</div>
                    }

                    <p class="profile-bio">
                        @(string.IsNullOrEmpty(item.Bio) ? "No bio available." : item.Bio)
                    </p>
                </a>

                <div class="actions-bar">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-link" title="Edit Profile">✎</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="action-link" title="View Profile">👁</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-link delete-link" title="Delete Profile">✕</a>
                </div>

            </div>
        }
    </div>

</div>