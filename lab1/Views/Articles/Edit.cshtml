@model lab1.Models.Article

@{
    ViewData["Title"] = "Редагування";
}

<style>
    /* IJournal Editor Styles (Reused & Adapted) */
    .editor-container {
        max-width: 800px;
        margin: 0 auto;
        animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .glass-canvas {
        background: rgba(30, 30, 35, 0.4);
        backdrop-filter: blur(40px) saturate(110%);
        -webkit-backdrop-filter: blur(40px) saturate(110%);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 32px;
        padding: 60px;
        position: relative;
        overflow: hidden;
    }

    .brand-subtitle {
        text-align: center;
        margin-bottom: 40px;
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.9rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        font-weight: 600;
    }

    .input-title {
        width: 100%;
        background: transparent;
        border: none;
        color: #fff;
        font-size: 3rem;
        font-weight: 700;
        letter-spacing: -0.02em;
        padding: 10px 0;
        margin-bottom: 30px;
        line-height: 1.1;
    }

        .input-title:focus {
            outline: none;
        }

    .meta-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 30px;
        margin-bottom: 40px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding-bottom: 30px;
    }

    .input-group-clean label {
        display: block;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.4);
        margin-bottom: 8px;
        font-weight: 500;
    }

    .input-clean {
        width: 100%;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid transparent;
        border-radius: 12px;
        color: #fff;
        padding: 12px 16px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .input-clean:focus {
            background: rgba(255, 255, 255, 0.08);
            outline: none;
            border-color: rgba(255, 255, 255, 0.1);
        }

    .select-clean {
        width: 100%;
        background: rgba(255, 255, 255, 0.03);
        border: none;
        border-radius: 16px;
        color: rgba(255, 255, 255, 0.8);
        padding: 15px;
        font-size: 0.9rem;
        min-height: 120px;
    }

        .select-clean:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.06);
        }

        .select-clean option:checked {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

    .textarea-clean {
        width: 100%;
        background: transparent;
        border: none;
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.1rem;
        line-height: 1.7;
        min-height: 300px;
        resize: vertical;
        padding: 0;
    }

        .textarea-clean:focus {
            outline: none;
        }

    .actions-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 50px;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .btn-cancel {
        color: rgba(255, 255, 255, 0.4);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

        .btn-cancel:hover {
            color: #fff;
        }

    .btn-group-right {
        display: flex;
        gap: 16px;
    }

    .btn-secondary-glass {
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 12px 24px;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s;
    }

        .btn-secondary-glass:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

    .btn-primary-white {
        background: #ffffff;
        color: #000000;
        border: none;
        padding: 12px 32px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.15);
        transition: transform 0.2s cubic-bezier(0.25, 1, 0.5, 1);
    }

        .btn-primary-white:hover {
            transform: scale(1.05);
            box-shadow: 0 0 50px rgba(255, 255, 255, 0.25);
        }

    .status-pill {
        display: inline-flex;
        align-items: center;
        padding: 6px 16px;
        background: rgba(255, 214, 10, 0.1);
        color: #FFD60A;
        font-size: 0.8rem;
        border-radius: 20px;
        margin-bottom: 20px;
        animation: fadeIn 0.5s ease;
    }

    input[type="date"] {
        color-scheme: dark;
    }

    .text-danger {
        font-size: 0.8rem;
        color: #ff453a;
        margin-top: 4px;
        display: block;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>

<div class="editor-container py-5">

    <div class="glass-canvas">

        <div class="brand-subtitle">
            Editing Mode
        </div>

        @if (TempData["Message"] != null)
        {
            <div style="text-align: center;">
                <div class="status-pill">
                    ✨ @TempData["Message"]
                </div>
            </div>
        }

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="Id" />

            <div>
                <input asp-for="Title" class="input-title" placeholder="Untitled Masterpiece" autocomplete="off" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="meta-grid">
                <div class="input-group-clean">
                    <label>Category</label>
                    <input asp-for="Category" class="input-clean" placeholder="Design, Life..." />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="input-group-clean">
                    <label>Rating (0-10)</label>
                    <input asp-for="Rating" class="input-clean" type="number" min="0" max="10" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="input-group-clean">
                    <label>Date</label>
                    <input asp-for="PublicationDate" class="input-clean" type="date" />
                    <span asp-validation-for="PublicationDate" class="text-danger"></span>
                </div>
            </div>

            <div style="margin-bottom: 40px;">
                <label style="display: block; font-size: 0.75rem; color: rgba(255,255,255,0.4); margin-bottom: 10px;">AUTHORS</label>
                <select name="selectedAuthors" class="select-clean" multiple asp-items="ViewBag.AuthorsList"></select>
            </div>

            <div>
                <textarea asp-for="Content" class="textarea-clean" placeholder="Refine your thoughts..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="actions-wrapper">
                <a asp-action="Index" class="btn-cancel">Discard Changes</a>

                <div class="btn-group-right">
                    <button type="submit" name="action" value="Draft" class="btn-secondary-glass">
                        Save to Session
                    </button>

                    <button type="submit" name="action" value="Publish" class="btn-primary-white">
                        Commit Changes
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}