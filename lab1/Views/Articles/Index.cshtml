@using System.Security.Claims
@model IEnumerable<lab1.Models.Article>

@{
    ViewData["Title"] = "Library";
}

<style>
    .library-header {
        text-align: center;
        margin-bottom: 60px;
        padding-top: 40px;
    }

    .library-title {
        font-size: 3rem;
        font-weight: 700;
        letter-spacing: -0.03em;
        line-height: 1.1;
        background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.7) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 16px;
    }

    .library-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.4);
        max-width: 500px;
        margin: 0 auto 40px auto;
    }

    /* --- Оновлений стиль кнопки (ідентичний до Авторів) --- */
    .btn-new-entry {
        background: rgba(255, 255, 255, 0.05);
        color: #fff;
        padding: 12px 32px;
        border-radius: 100px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

        .btn-new-entry:hover {
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 255, 255, 0.1);
            color: #fff;
        }
    /* ------------------------------------------------------ */

    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 30px;
    }

    .journal-card {
        background: rgba(255, 255, 255, 0.02);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        padding: 32px;
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
        position: relative;
    }

        .journal-card:hover {
            transform: translateY(-8px);
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(255, 255, 255, 0.1);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

    .card-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .meta-pill {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 4px 12px;
        border-radius: 20px;
    }

    .meta-date {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.3);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        text-decoration: none;
        line-height: 1.3;
        margin-bottom: 12px;
        display: block;
        transition: color 0.2s;
    }

        .card-title:hover {
            color: rgba(255, 255, 255, 0.8);
        }

    .card-excerpt {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.6;
        margin-bottom: 30px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    .card-footer-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding-top: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .read-link {
        color: #fff;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        opacity: 0.8;
        transition: opacity 0.2s;
    }

        .read-link:hover {
            opacity: 1;
        }

    .action-icons {
        display: flex;
        gap: 12px;
    }

    .icon-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.4);
        background: transparent;
        transition: all 0.2s;
        text-decoration: none;
        border: 1px solid transparent;
        font-size: 0.9rem;
    }

        .icon-btn:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .icon-btn.delete:hover {
            background: rgba(255, 69, 58, 0.1);
            color: #ff453a;
        }

    .rating-star {
        color: #FFD60A;
        margin-right: 4px;
        font-size: 0.8rem;
    }

    .filter-bar {
        background: rgba(10, 15, 30, 0.4);
        backdrop-filter: blur(30px) saturate(120%);
        -webkit-backdrop-filter: blur(30px) saturate(120%);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 20px 30px;
        margin-bottom: 40px;
        display: flex;
        gap: 20px;
        align-items: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .filter-group {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .filter-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba(255, 255, 255, 0.4);
        font-weight: 600;
    }

    .glass-select {
        appearance: none;
        -webkit-appearance: none;
        background: rgba(0, 0, 0, 0.3) url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e") no-repeat right 15px center;
        background-size: 14px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #fff;
        padding: 10px 40px 10px 20px;
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        min-width: 180px;
    }

        .glass-select:focus {
            outline: none;
            border-color: #00ffc8;
            background-color: rgba(10, 25, 60, 0.6);
            box-shadow: 0 0 15px rgba(0, 255, 200, 0.2);
        }

        .glass-select option {
            background: #0f1423;
            color: #fff;
        }
</style>

<div class="container pb-5">
    <div class="library-header">
        <div>
            <h1 class="library-title">Library</h1>
            <p class="library-subtitle">A collection of your thoughts and stories.</p>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn-new-entry">
                Add New Article
            </a>
        }
    </div>
    <form method="get" class="filter-bar" id="filterForm">
        <div class="filter-group">
            <span class="filter-label">Category:</span>
            <select name="category" class="glass-select" onchange="document.getElementById('filterForm').submit();">
                <option value="All">All Categories</option>
                @if (ViewBag.Categories != null)
                {
                    foreach (var cat in (IEnumerable<string>)ViewBag.Categories)
                    {
                        if (ViewBag.CurrentCategory == cat)
                        {
                            <option value="@cat" selected>@cat</option>
                        }
                        else
                        {
                            <option value="@cat">@cat</option>
                        }
                    }
                }
            </select>
        </div>

        <div class="filter-group" style="margin-left: auto;">
            <span class="filter-label">Sort By:</span>
            <select name="sortBy" class="glass-select" onchange="document.getElementById('filterForm').submit();">
                <option value="newest" selected="@(ViewBag.CurrentSort == "newest" ? "selected" : null)">Newest First</option>
                <option value="oldest" selected="@(ViewBag.CurrentSort == "oldest" ? "selected" : null)">Oldest First</option>
                <option value="rating" selected="@(ViewBag.CurrentSort == "rating" ? "selected" : null)">Highest Rating</option>
                <option value="top_author" selected="@(ViewBag.CurrentSort == "top_author" ? "selected" : null)">Top Authors</option>
            </select>
        </div>
    </form>

    <div class="cards-grid">
        @foreach (var item in Model)
        {
            <div class="journal-card">
                <div class="card-meta">
                    <span class="meta-pill">@item.Category</span>
                    <span class="meta-date">@item.PublicationDate.ToString("MMM dd")</span>
                </div>

                <a asp-action="Details" asp-route-id="@item.Id" class="card-title">
                    @item.Title
                </a>

                <div style="font-size: 0.8rem; color: rgba(255,255,255,0.4); margin-bottom: 15px;">
                    <span class="rating-star">★</span> @item.Rating.ToString("0.0") / 10
                </div>

                <p class="card-excerpt">
                    @item.Content
                </p>

                <div class="card-footer-row">
                    <a asp-action="Details" asp-route-id="@item.Id" class="read-link">
                        Read more &rarr;
                    </a>

                    <div class="action-icons">
                        @{
                            var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            var isAdmin = User.IsInRole("Admin");
                        }

                        @if (item.UserId == currentUserId || isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="icon-btn" title="Edit">✎</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="icon-btn delete" title="Delete">✕</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>