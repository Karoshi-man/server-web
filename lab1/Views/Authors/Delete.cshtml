@model lab1.Models.Author

@{
    ViewData["Title"] = "Remove Author";
}

<style>
    .delete-profile-wrapper {
        max-width: 500px;
        margin: 0 auto;
        padding-top: 60px;
        animation: shakeIn 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
    }

    .glass-danger-profile {
        background: rgba(40, 10, 10, 0.7);
        backdrop-filter: blur(40px) saturate(120%);
        -webkit-backdrop-filter: blur(40px) saturate(120%);
        border: 1px solid rgba(255, 69, 58, 0.2);
        border-radius: 32px;
        padding: 48px;
        text-align: center;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.6);
        position: relative;
        overflow: hidden;
    }

    .avatar-ghost {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin: 0 auto 24px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        font-weight: 700;
        background: rgba(255, 69, 58, 0.1);
        color: #ff453a;
        border: 2px solid #ff453a;
        box-shadow: 0 0 30px rgba(255, 69, 58, 0.2);
        animation: pulseRed 2s infinite;
    }

    .delete-title {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 12px;
    }

    .delete-desc {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
        margin-bottom: 40px;
        line-height: 1.5;
    }

    .target-card {
        background: rgba(0, 0, 0, 0.3);
        border-radius: 20px;
        padding: 24px;
        margin-bottom: 40px;
        border: 1px solid rgba(255, 69, 58, 0.1);
    }

    .target-name {
        font-size: 1.4rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 4px;
    }

    .target-email {
        color: #ff453a;
        font-family: monospace;
        font-size: 0.9rem;
    }

    .actions-stack {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .btn-destroy {
        background: linear-gradient(135deg, #ff453a, #ff3b30);
        color: #fff;
        border: none;
        width: 100%;
        padding: 16px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.2s;
        box-shadow: 0 10px 30px rgba(255, 69, 58, 0.3);
    }

    .btn-destroy:hover {
            transform: scale(1.02);
            box-shadow: 0 15px 40px rgba(255, 69, 58, 0.4);
    }

    .btn-cancel {
        color: rgba(255, 255, 255, 0.4);
        text-decoration: none;
        font-size: 0.95rem;
        padding: 10px;
        transition: color 0.2s;
    }

    .btn-cancel:hover {
            color: #fff;
    }

    @@keyframes pulseRed {
        0% {
            box-shadow: 0 0 0 0 rgba(255, 69, 58, 0.4);
        }

        70% {
            box-shadow: 0 0 0 20px rgba(255, 69, 58, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(255, 69, 58, 0);
        }
    }

    @@keyframes shakeIn {
        10%, 90% {
            transform: translate3d(-1px, 0, 0);
        }

        20%, 80% {
            transform: translate3d(2px, 0, 0);
        }

        30%, 50%, 70% {
            transform: translate3d(-4px, 0, 0);
        }

        40%, 60% {
            transform: translate3d(4px, 0, 0);
        }
    }
</style>

<div class="delete-profile-wrapper">

    <div class="glass-danger-profile">

        @{
            var initial = !string.IsNullOrEmpty(Model.FullName) ? Model.FullName.Substring(0, 1).ToUpper() : "!";
        }
        <div class="avatar-ghost">@initial</div>

        <h1 class="delete-title">Delete Profile?</h1>
        <p class="delete-desc">
            Removing an author is permanent. <br />
            Their articles will remain but become unlinked.
        </p>

        <div class="target-card">
            <div class="target-name">@Model.FullName</div>
            <div class="target-email">@Model.Email</div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="actions-stack">
                <button type="submit" class="btn-destroy">
                    Confirm Deletion
                </button>

                <a asp-action="Index" class="btn-cancel">
                    Nevermind
                </a>
            </div>
        </form>

    </div>
</div>