<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Journal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">


    <style>
        .flatpickr-calendar {
            background: rgba(15, 20, 35, 0.85) !important;
            backdrop-filter: blur(30px) saturate(150%) !important;
            -webkit-backdrop-filter: blur(30px) saturate(150%) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            border-radius: 16px !important;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6), inset 0 1px 1px rgba(255, 255, 255, 0.1) !important;
            color: #fff !important;
            padding: 15px !important;
            min-width: 340px !important;
            font-family: inherit !important;
        }

        .flatpickr-months {
            margin-bottom: 10px !important;
        }

        .flatpickr-month, .flatpickr-current-month {
            color: #fff !important;
            fill: #fff !important;
            padding-top: 0 !important;
        }

            .flatpickr-current-month .flatpickr-monthDropdown-months {
                background: rgba(15, 20, 35, 0.9) !important;
                color: #fff !important;
                border-radius: 8px;
                padding: 5px !important;
                font-weight: 600 !important;
            }

            .flatpickr-current-month input.cur-year {
                color: #fff !important;
                font-weight: 600 !important;
            }

            .flatpickr-current-month .numInputWrapper span.arrowUp:after {
                border-bottom-color: rgba(255, 255, 255, 0.8) !important;
                top: 3px !important;
            }
            .flatpickr-current-month .numInputWrapper span.arrowDown:after {
                border-top-color: rgba(255, 255, 255, 0.8) !important;
            }
            .flatpickr-current-month .numInputWrapper span:hover:after {
                border-bottom-color: #00ffc8 !important;
                border-top-color: #00ffc8 !important;
            }

        span.flatpickr-weekday {
            color: rgba(255, 255, 255, 0.4) !important;
            font-weight: 600 !important;
            font-size: 0.9rem !important;
        }

        .flatpickr-days {
            width: 100% !important;
        }

        .dayContainer {
            width: 100% !important;
            min-width: 100% !important;
            max-width: 100% !important;
            justify-content: space-around !important;
        }

        .flatpickr-day {
            color: rgba(255, 255, 255, 0.9) !important;
            border-radius: 12px !important;
            border: 1px solid transparent !important;
            transition: all 0.2s !important;
            font-size: 1rem !important;
            margin-top: 5px !important;
            height: 40px !important;
            line-height: 40px !important;
            flex-basis: 13.5% !important;
            max-width: 40px !important;
        }

            .flatpickr-day:hover, .flatpickr-day.prevMonthDay:hover, .flatpickr-day.nextMonthDay:hover {
                background: rgba(255, 255, 255, 0.15) !important;
                border-color: rgba(255, 255, 255, 0.2) !important;
            }

            .flatpickr-day.prevMonthDay, .flatpickr-day.nextMonthDay {
                color: rgba(255, 255, 255, 0.2) !important;
            }

            .flatpickr-day.today {
                border-color: rgba(0, 255, 200, 0.5) !important;
            }

            .flatpickr-day.selected, .flatpickr-day.selected:hover {
                background: #00ffc8 !important;
                color: #000 !important;
                border-color: #00ffc8 !important;
                font-weight: 800 !important;
                box-shadow: 0 0 20px rgba(0, 255, 200, 0.4) !important;
            }

        .flatpickr-prev-month svg, .flatpickr-next-month svg {
            fill: rgba(255, 255, 255, 0.8) !important;
            transition: fill 0.2s !important;
            width: 16px !important;
            height: 16px !important;
        }

        .flatpickr-prev-month:hover svg, .flatpickr-next-month:hover svg {
            fill: #00ffc8 !important;
        }

        input[type="date"]::-webkit-calendar-picker-indicator {
            display: none !important;
        }

        :root {
            --glass-surface: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.08);
            --glass-highlight: rgba(255, 255, 255, 0.15);
            --text-primary: #ffffff;
            --text-secondary: rgba(255, 255, 255, 0.55);
            --accent-glow: rgba(255, 255, 255, 0.1);
        }

        body {
            background-color: #000000;
            color: var(--text-primary);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            overflow-x: hidden;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
            background: radial-gradient(circle at 50% 0%, #1a1a2e 0%, #000000 60%);
        }

        .ambient-light {
            position: fixed;
            top: -20%;
            left: 50%;
            transform: translateX(-50%);
            width: 80vw;
            height: 60vh;
            background: radial-gradient(ellipse at center, rgba(60, 100, 255, 0.08), transparent 70%);
            z-index: -1;
            pointer-events: none;
            animation: breathe 10s ease-in-out infinite alternate;
        }

        @@keyframes breathe {
            0% {
                opacity: 0.5;
                transform: translateX(-50%) scale(1);
            }

            100% {
                opacity: 0.8;
                transform: translateX(-50%) scale(1.1);
            }
        }

        .nav-container {
            position: fixed;
            top: 24px;
            left: 0;
            right: 0;
            display: flex;
            justify-content: center;
            z-index: 1000;
        }

        .glass-nav {
            background: rgba(20, 20, 20, 0.6);
            backdrop-filter: blur(25px) saturate(180%);
            -webkit-backdrop-filter: blur(25px) saturate(180%);
            border: 1px solid var(--glass-border);
            padding: 12px 30px;
            border-radius: 100px;
            display: flex;
            align-items: center;
            gap: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

            .glass-nav:hover {
                background: rgba(30, 30, 30, 0.7);
                transform: translateY(2px);
                border-color: var(--glass-highlight);
            }

        .nav-brand {
            font-weight: 700;
            font-size: 1rem;
            letter-spacing: -0.02em;
            color: #fff;
            text-decoration: none;
            opacity: 0.9;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .nav-item-link {
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .nav-item-link:hover {
                color: #fff;
            }

        .content-wrapper {
            margin-top: 120px;
            flex: 1 0 auto;
            position: relative;
            z-index: 1;
            width: 100%;
        }

        .minimal-footer {
            flex-shrink: 0;
            text-align: center;
            padding: 40px 0;
            color: var(--text-secondary);
            font-size: 0.8rem;
            opacity: 0.5;
        }

            .minimal-footer a {
                color: inherit;
                text-decoration: none;
            }

                .minimal-footer a:hover {
                    text-decoration: underline;
                }

    </style>

</head>
<body>

    <div class="ambient-light"></div>

    <div class="nav-container">
        <nav class="glass-nav">
            <a class="nav-brand" asp-controller="Home" asp-action="Index">iJournal</a>
            <div style="width: 1px; height: 16px; background: rgba(255,255,255,0.1);"></div>
            <ul class="nav-links">
                <li><a class="nav-item-link" asp-controller="Articles" asp-action="Index">Articles</a></li>
                <li><a class="nav-item-link" asp-controller="Authors" asp-action="Index">Authors</a></li>
            </ul>
            <div style="width: 1px; height: 16px; background: rgba(255,255,255,0.1);"></div>
            <partial name="_LoginPartial" />
        </nav>
    </div>

    <div class="container content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="minimal-footer">
        <p>
            &copy; 2026 Designed in Lviv.
            <a href="https://github.com/Karoshi-man/server-web" target="_blank" style="margin-left: 10px; border-bottom: 1px solid rgba(255,255,255,0.1); transition: all 0.3s ease;">
                GitHub
            </a>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            flatpickr('input[type="date"]', {
                altInput: true,
                altFormat: "F j, Y",
                dateFormat: "Y-m-d",
                disableMobile: true
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>