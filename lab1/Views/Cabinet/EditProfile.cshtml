@model lab1.Models.Author
@{
    ViewData["Title"] = "Edit Profile";
}

<style>
    .init-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        animation: fadeIn 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .glass-panel {
        background: rgba(10, 15, 30, 0.45);
        backdrop-filter: blur(50px) saturate(120%);
        -webkit-backdrop-filter: blur(50px) saturate(120%);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 32px;
        padding: 60px;
        width: 100%;
        max-width: 800px;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.6), inset 0 2px 4px rgba(255, 255, 255, 0.05);
        position: relative;
    }

    .panel-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .panel-title {
        font-size: 2.8rem;
        font-weight: 800;
        letter-spacing: -0.03em;
        background: linear-gradient(180deg, #ffffff 0%, #aaddff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 12px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 28px;
    }

    .form-group-full {
        grid-column: 1 / -1;
    }

    .input-label {
        display: block;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        font-weight: 600;
    }

    .deep-input {
        width: 100%;
        padding: 16px 20px;
        background: rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        color: #fff;
        font-size: 1rem;
        transition: all 0.3s;
    }

        .deep-input:focus {
            outline: none;
            background: rgba(10, 25, 60, 0.5);
            border-color: rgba(0, 113, 227, 0.6);
            box-shadow: inset 0 2px 6px rgba(0,0,0,0.4), 0 0 0 4px rgba(0, 113, 227, 0.15);
        }

    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(1);
        opacity: 0.5;
        cursor: pointer;
    }

    textarea.deep-input {
        min-height: 140px;
        resize: vertical;
        line-height: 1.6;
    }

    .btn-actions {
        display: flex;
        gap: 15px;
        margin-top: 20px;
        grid-column: 1 / -1;
    }

    .btn-submit {
        flex: 1;
        padding: 20px;
        background: rgba(0, 113, 227, 0.15);
        color: #fff;
        border: 1px solid rgba(100, 170, 255, 0.3);
        border-radius: 16px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background: rgba(0, 113, 227, 0.35);
            border-color: rgba(255, 255, 255, 0.6);
            box-shadow: 0 15px 35px rgba(0, 113, 227, 0.3);
            transform: translateY(-2px);
        }

    .btn-cancel {
        flex: 1;
        padding: 20px;
        background: transparent;
        color: rgba(255, 255, 255, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
        }

    .text-danger {
        font-size: 0.8rem;
        color: #ff453a;
        margin-top: 8px;
        display: block;
    }
</style>

<div class="init-container">
    <div class="glass-panel">
        <div class="panel-header">
            <h1 class="panel-title">Update Identity</h1>
            <p style="color: rgba(255, 255, 255, 0.5);">Modify your professional presence.</p>
        </div>

        <form asp-action="EditProfile" method="post" class="form-grid">
            <div asp-validation-summary="ModelOnly" class="text-danger form-group-full"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />

            <div>
                <label class="input-label" asp-for="FullName"></label>
                <input asp-for="FullName" class="deep-input" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div>
                <label class="input-label" asp-for="Nickname"></label>
                <input asp-for="Nickname" class="deep-input" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>

            <div>
                <label class="input-label" asp-for="Email"></label>
                <input asp-for="Email" class="deep-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <label class="input-label" asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="deep-input" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group-full">
                <label class="input-label" asp-for="Bio"></label>
                <textarea asp-for="Bio" class="deep-input"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="btn-actions">
                <a asp-action="Index" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-submit">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}