@model lab1.Models.Author

@{
    ViewData["Title"] = Model.FullName;
}

@using System.Security.Claims
@{
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<style>
    .profile-view-container {
        max-width: 800px;
        margin: 0 auto;
        padding-top: 40px;
        animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .glass-profile {
        background: rgba(30, 30, 35, 0.4);
        backdrop-filter: blur(40px) saturate(120%);
        -webkit-backdrop-filter: blur(40px) saturate(120%);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 32px;
        padding: 60px;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.5);
        position: relative;
        overflow: hidden;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .profile-avatar-large {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
        margin: 0 auto 24px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        font-weight: 700;
        color: #fff;
        box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .profile-name-large {
        font-size: 2.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 8px;
        letter-spacing: -0.02em;
    }

    .profile-handle-large {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.4);
        font-family: 'Courier New', monospace;
        margin-bottom: 24px;
    }

    .profile-meta-row {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-bottom: 40px;
    }

    .meta-chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.05);
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .bio-box {
        text-align: center;
        max-width: 600px;
        margin: 0 auto 60px auto;
        font-size: 1.1rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
    }

    .section-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba(255, 255, 255, 0.3);
        margin-bottom: 16px;
        display: block;
        text-align: left;
    }

    .publications-wrapper {
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding-top: 40px;
    }

    .pub-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .pub-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: rgba(255, 255, 255, 0.02);
        padding: 20px;
        border-radius: 16px;
        text-decoration: none;
        transition: all 0.2s;
        border: 1px solid transparent;
    }

    .pub-item:hover {
            background: rgba(255, 255, 255, 0.05);
            transform: translateX(4px);
            border-color: rgba(255, 255, 255, 0.05);
    }

    .pub-title {
        color: #fff;
        font-weight: 600;
        font-size: 1rem;
    }

    .pub-date {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.85rem;
    }

    .empty-state {
        text-align: center;
        padding: 40px;
        color: rgba(255, 255, 255, 0.3);
        font-style: italic;
        background: rgba(255, 255, 255, 0.01);
        border-radius: 16px;
    }

    .profile-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 60px;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .btn-edit-profile {
        background: #fff;
        color: #000;
        text-decoration: none;
        padding: 12px 32px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: transform 0.2s cubic-bezier(0.25, 1, 0.5, 1);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
    }

    .btn-edit-profile:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.2);
    }

    .btn-back {
        color: rgba(255, 255, 255, 0.4);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

        .btn-back:hover {
            color: #fff;
        }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="profile-view-container pb-5">

    <div class="glass-profile">

        <div class="profile-header">
            @{
                var initial = !string.IsNullOrEmpty(Model.FullName) ? Model.FullName.Substring(0, 1).ToUpper() : "?";
            }
            <div class="profile-avatar-large">
                @initial
            </div>

            <h1 class="profile-name-large">@Model.FullName</h1>

            <div class="profile-handle-large">
                @(string.IsNullOrEmpty(Model.Nickname) ? "" : "@" + Model.Nickname)
            </div>

            <div class="profile-meta-row">
                <div class="meta-chip">
                    ✉️ @Model.Email
                </div>
                <div class="meta-chip">
                    🎂 @Model.DateOfBirth.ToString("MMM dd, yyyy")
                </div>
            </div>
        </div>

        <div class="bio-box">
            @if (!string.IsNullOrEmpty(Model.Bio))
            {
                @Model.Bio
            }
            else
            {
                <span style="opacity: 0.5;">No biography added yet.</span>
            }
        </div>

        <div class="publications-wrapper">
            <span class="section-label">PUBLICATIONS (@(Model.ArticleAuthors?.Count ?? 0))</span>

            <div class="pub-list">
                @if (Model.ArticleAuthors != null && Model.ArticleAuthors.Any())
                {
                    @foreach (var link in Model.ArticleAuthors)
                    {
                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@link.ArticleId" class="pub-item">
                            <span class="pub-title">@link.Article.Title</span>
                            <span class="pub-date">@link.Article.PublicationDate.ToString("MMM dd, yyyy")</span>
                        </a>
                    }
                }
                else
                {
                    <div class="empty-state">
                        This author hasn't published anything yet.
                    </div>
                }
            </div>
        </div>

        <div class="profile-actions">
            <a asp-action="Index" class="btn-back">
                &larr; All Authors
            </a>
            @if (Model.UserId == currentUserId || User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit-profile">
                    Edit Profile
                </a>
            }
        </div>

    </div>
</div>