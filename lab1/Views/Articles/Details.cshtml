@model lab1.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<style>
    /* IJournal Reading Mode Styles */

    .reader-container {
        max-width: 800px;
        margin: 0 auto;
        animation: fadeUp 1s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    /* GLASS CANVAS - READING SURFACE */
    .reading-glass {
        background: rgba(30, 30, 35, 0.4);
        backdrop-filter: blur(50px) saturate(100%);
        -webkit-backdrop-filter: blur(50px) saturate(100%);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 40px;
        padding: 60px 80px; /* Великі відступи для повітря */
        position: relative;
        overflow: hidden;
        box-shadow: 0 40px 100px rgba(0, 0, 0, 0.5);
    }

    /* HEADER TYPOGRAPHY */
    .article-title {
        font-size: 3.5rem;
        font-weight: 800;
        letter-spacing: -0.03em;
        line-height: 1.1;
        color: #fff;
        margin-bottom: 30px;
        background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.8) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* METADATA ROW */
    .meta-row {
        display: flex;
        align-items: center;
        gap: 24px;
        padding-bottom: 40px;
        margin-bottom: 40px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .meta-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba(255, 255, 255, 0.3);
        font-weight: 600;
    }

    .meta-value {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
    }

    /* RATING BADGE */
    .rating-badge {
        background: rgba(255, 214, 10, 0.1);
        color: #FFD60A;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    /* CONTENT BODY - Optimised for Reading */
    .prose-content {
        font-size: 1.25rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.85); /* Toned down white for eye comfort */
        white-space: pre-wrap;
        font-family: 'Inter', -apple-system, sans-serif; /* Clean Sans-Serif looks more modern tech */
        margin-bottom: 60px;
    }

    /* AUTHORS SECTION */
    .authors-section {
        margin-top: 60px;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .author-chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.05);
        padding: 8px 16px;
        border-radius: 50px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        transition: all 0.2s;
        border: 1px solid transparent;
    }

        .author-chip:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            border-color: rgba(255, 255, 255, 0.1);
        }

    .author-avatar {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: rgba(255,255,255,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        font-weight: 700;
    }

    /* FOOTER ACTIONS */
    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 60px;
    }

    .btn-back {
        color: rgba(255, 255, 255, 0.4);
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-back:hover {
            color: #fff;
        }

    .btn-group-actions {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .link-danger {
        color: #ff453a;
        text-decoration: none;
        font-size: 0.95rem;
        opacity: 0.7;
        transition: opacity 0.2s;
    }

        .link-danger:hover {
            opacity: 1;
        }

    .btn-edit-primary {
        background: #fff;
        color: #000;
        text-decoration: none;
        padding: 12px 32px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: transform 0.2s cubic-bezier(0.25, 1, 0.5, 1);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
    }

        .btn-edit-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.25);
            color: #000;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .reading-glass {
            padding: 40px 24px;
        }

        .article-title {
            font-size: 2.5rem;
        }

        .meta-row {
            flex-wrap: wrap;
            gap: 20px;
        }
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="reader-container py-5">

    <div class="reading-glass">

        <header>
            <h1 class="article-title">@Model.Title</h1>

            <div class="meta-row">
                <div class="meta-item">
                    <span class="meta-label">Date</span>
                    <span class="meta-value">@Model.PublicationDate.ToString("MMM dd, yyyy")</span>
                </div>

                <div class="meta-item">
                    <span class="meta-label">Category</span>
                    <span class="meta-value">@Model.Category</span>
                </div>

                <div class="meta-item">
                    <span class="meta-label">Rating</span>
                    <span class="rating-badge">
                        ★ @Model.Rating
                    </span>
                </div>
            </div>
        </header>

        <article class="prose-content">
            @Model.Content
        </article>

        @if (Model.ArticleAuthors != null && Model.ArticleAuthors.Any())
        {
            <div class="authors-section">
                <div class="meta-label" style="margin-bottom: 12px;">WRITTEN BY</div>
                @foreach (var link in Model.ArticleAuthors)
                {
                    var initial = link.Author.FullName.Substring(0, 1);
                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@link.AuthorId" class="author-chip">
                        <div class="author-avatar">@initial</div>
                        @link.Author.FullName
                    </a>
                }
            </div>
        }

        <div class="action-bar">
            <a asp-action="Index" class="btn-back">
                <span>&larr;</span> Library
            </a>

            <div class="btn-group-actions">
                <a asp-action="Delete" asp-route-id="@Model.Id" class="link-danger">Delete</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit-primary">Edit Article</a>
            </div>
        </div>

    </div>
</div>