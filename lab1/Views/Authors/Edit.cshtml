@model lab1.Models.Author

@{
    ViewData["Title"] = "Edit Profile";
}

<style>
    .profile-edit-container {
        max-width: 600px;
        margin: 0 auto;
        padding-top: 40px;
        animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .glass-card-form {
        background: rgba(30, 30, 35, 0.4);
        backdrop-filter: blur(40px) saturate(120%);
        -webkit-backdrop-filter: blur(40px) saturate(120%);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 32px;
        padding: 48px;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.5);
    }

    .form-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .form-title {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 8px;
        letter-spacing: -0.02em;
    }

    .form-subtitle {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.9rem;
    }

    .avatar-edit-placeholder {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.03);
        border: 1px dashed rgba(255, 255, 255, 0.2);
        margin: 0 auto 24px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.3);
        font-size: 2rem;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
    }

    .avatar-edit-placeholder:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.5);
            color: #fff;
    }

    .avatar-edit-icon {
        position: absolute;
        bottom: 0;
        right: 0;
        background: #fff;
        color: #000;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .input-group-clean {
        margin-bottom: 24px;
    }

    .input-label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba(255, 255, 255, 0.4);
        margin-bottom: 8px;
        font-weight: 600;
    }

    .input-field {
        width: 100%;
        background: transparent;
        border: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        font-size: 1rem;
        padding: 12px 0;
        transition: border-color 0.3s;
        border-radius: 0;
    }

    .input-field:focus {
            outline: none;
            border-bottom-color: #fff;
            background: rgba(255,255,255,0.02);
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
    }

    .btn-save {
        background: #fff;
        color: #000;
        border: none;
        width: 100%;
        padding: 14px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 1rem;
        margin-top: 32px;
        cursor: pointer;
        transition: transform 0.2s cubic-bezier(0.25, 1, 0.5, 1);
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.1);
    }

    .btn-save:hover {
            transform: scale(1.02);
            box-shadow: 0 0 50px rgba(255, 255, 255, 0.2);
    }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: rgba(255, 255, 255, 0.4);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

    .btn-cancel:hover {
        color: #fff;
    }

    .text-danger {
        font-size: 0.8rem;
        color: #ff453a;
        margin-top: 4px;
        display: block;
    }

    input[type="date"] {
        color-scheme: dark;
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="profile-edit-container pb-5">

    <div class="glass-card-form">

        <div class="form-header">
            @{
                var initial = !string.IsNullOrEmpty(Model.FullName) ? Model.FullName.Substring(0, 1).ToUpper() : "?";
            }
            <div class="avatar-edit-placeholder">
                @initial
                <div class="avatar-edit-icon">✎</div>
            </div>
            <h2 class="form-title">Edit Profile</h2>
            <p class="form-subtitle">Update author information.</p>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="Id" />

            <div class="input-group-clean">
                <label asp-for="FullName" class="input-label">Full Name</label>
                <input asp-for="FullName" class="input-field" placeholder="e.g. Isaac Asimov" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-grid">
                <div class="input-group-clean">
                    <label asp-for="Nickname" class="input-label">Nickname</label>
                    <div style="position: relative;">
                        <span style="position: absolute; left: 0; top: 12px; color: rgba(255,255,255,0.3);">@@</span>
                        <input asp-for="Nickname" class="input-field" style="padding-left: 20px;" placeholder="username" />
                    </div>
                    <span asp-validation-for="Nickname" class="text-danger"></span>
                </div>

                <div class="input-group-clean">
                    <label asp-for="DateOfBirth" class="input-label">Birth Date</label>
                    <input asp-for="DateOfBirth" class="input-field" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>

            <div class="input-group-clean">
                <label asp-for="Email" class="input-label">Email Address</label>
                <input asp-for="Email" class="input-field" type="email" placeholder="author@ijournal.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group-clean">
                <label asp-for="Bio" class="input-label">Biography</label>
                <textarea asp-for="Bio" class="input-field" rows="4" placeholder="Tell us about the author..."></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <input type="submit" value="Save Changes" class="btn-save" />
            <a asp-action="Index" class="btn-cancel">Discard Changes</a>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}